.mask_layer {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal_box {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 300px;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.title {
  padding: 1.3em 1.6em 0.5em;
  font-weight: 400;
  font-size: 18px;
}

.content {
  padding: 0 1.6em 0.8em;
  min-height: 40px;
  font-size: 15px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #808080;
}

.btn {
    position: relative;
    line-height: 48px;
    font-size: 18px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-top: 1px solid #D5D5D6;
}
.btn view{
      display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}
.cancel {
      color: #353535;
}

.confirm {
  color: #09BB07;
   border-left: 1px solid #D5D5D6;
}
.modalMsg {
  text-align: center;
  display: block;
}

.slotModal{
  position: relative;
}
.close{
  position:absolute;
bottom:-190rpx;
left:345rpx;
width:60rpx;
height:60rpx;
border:1px solid #ffffff;
z-index:999999;
border-radius:100%;
text-align: center;
line-height: 60rpx;
color:#ffffff;
font-size: 35rpx;
}
.close::before{
